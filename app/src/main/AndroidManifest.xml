<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
            android:name="dev.cognitivity.chronal.ChronalApp"
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Chronal"
            android:enableOnBackInvokedCallback="true">
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Chronal.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.BeatDetectorActivity"
            android:exported="false"
            android:theme="@style/Theme.Chronal">
        </activity>
        <activity
            android:name=".activity.FullscreenActivity"
            android:exported="false"
            android:theme="@style/Theme.Chronal">
        </activity>
        <activity
            android:name=".activity.InstrumentActivity"
            android:exported="false"
            android:theme="@style/Theme.Chronal">
        </activity>
        <activity
            android:name=".activity.RhythmEditorActivity"
            android:exported="false"
            android:theme="@style/Theme.Chronal">
        </activity>
        <activity
            android:name=".activity.EditSounds"
            android:exported="false"
            android:theme="@style/Theme.Chronal">
        </activity>
        <activity
            android:name=".activity.LatencyActivity"
            android:exported="false"
            android:theme="@style/Theme.Chronal">
        </activity>
        <activity
            android:name=".activity.CreditsActivity"
            android:exported="false"
            android:theme="@style/Theme.Chronal">
        </activity>
        <activity
            android:name=".activity.HelpActivity"
            android:exported="false"
            android:theme="@style/Theme.Chronal">
        </activity>
        <activity
            android:name=".activity.AudioPlayerActivity"
            android:exported="false"
            android:theme="@style/Theme.Chronal">
        </activity>
        <activity
            android:name=".activity.PresetActivity"
            android:exported="false"
            android:theme="@style/Theme.Chronal">
        </activity>
        <activity
            android:name=".activity.WidgetConfigurationActivity"
            android:exported="true"
            android:theme="@style/Theme.Chronal">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TempoMarkingsActivity"
            android:exported="false"
            android:theme="@style/Theme.Chronal">
        </activity>
        <activity
            android:name=".activity.ImportActivity"
            android:exported="true"
            android:theme="@style/Theme.Chronal">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.OPEN_DOCUMENT" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.OPENABLE" />

                <data android:host="*" />
                <data android:scheme="content" />
                <data android:scheme="file" />
                <data android:mimeType="application/octet-stream" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <receiver android:name=".glance.ClockWidgetReceiver"
            android:exported="true"
            android:label="@string/widget_clock_title">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/clock_widget_info" />
        </receiver>
        <receiver android:name=".glance.PresetListWidgetReceiver"
            android:exported="true"
            android:label="@string/widget_list_title">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/preset_list_widget_info" />
        </receiver>
        <receiver android:name=".glance.TunerWidgetReceiver"
            android:exported="true"
            android:label="@string/widget_tuner_title">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/tuner_widget_info" />
        </receiver>

        <service
            android:name=".services.TunerWidgetService"
            android:foregroundServiceType="microphone"
            android:exported="false"/>
    </application>
</manifest>